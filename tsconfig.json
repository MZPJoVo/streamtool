{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./src/*"],
      "@components/*": ["src/renderer/Components/*"],
      "@interfaces/*": ["src/renderer/Interfaces/*"],
    }
  },
  "include": ["src/**/*"]
}
